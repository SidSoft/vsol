<%= form_for(:session, url: login_path, :html => {:class => 'form-signin text-center'}) do |f| %>
  <img class="text-center" src="/assets/usrctrl02.jpg" width="100" height="100" alt="">
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <%= f.label :email, class: 'sr-only' %>
  <%= f.email_field :email, class: 'form-control', placeholder: 'Email', required: true, autofocus: true %>
  <%= f.label :password, class: 'sr-only' %>
  <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
  <br>
  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %><br>
  <div class="row">
    <div class="col-md-6">
      <%= link_to href: '/auth/twitter' do %>
        <%= image_tag 'tlogin.png', height: "30", alt: 'Sign in with Twitter' %>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= link_to href: '/auth/google_oauth2' do %>
        <%= image_tag 'glogin.png', height: "30", alt: 'Sign in with Twitter' %>
      <% end %>
    </div>
  </div>
<% end %>